<div class="container">
  <h1>Bienvenue !</h1>

  <!-- Chercher un document -->
  <p>Cherchez un document existant :</p>
  <%= form_tag documents_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Chercher un document"%>

    <%= submit_tag "Rechercher", class: "btn btn-primary" %>
    <% end %>

<!-- Lien vers création d'un document -->
<br>
<p>Ou référencez un nouveau document :</p>
    <%= link_to "Nouveau", "documents/new" %>
<!-- Index qui montre les documents OU documents recherchés -->
<!-- TODO2 : Ne faire un index qui ne fait que les documents recherchés -->

<% @documents.each do |document| %>
  <h2><%= document.name %></h2>
  <%= link_to "Supprimer", document, method: :delete, data: { confirm: "Voulez-vous vraiment supprimer ce document ?" } %>
  <%= link_to "Mettre à jour", edit_document_path(document) %>

<% end %>
</div>
